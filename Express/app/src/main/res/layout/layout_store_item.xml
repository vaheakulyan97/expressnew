<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_from_all">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aff5b3">


        <ImageView
            android:id="@+id/product_store_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/honda_accord" />

        <TextView
            android:id="@+id/product_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/ratingBar"
            android:text="Honda Accord"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/product_store_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_store_name"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="13dp"
            android:text="2.4L, 201 hp, Japan, "
            android:textColor="#000000"
            android:textSize="@dimen/textsize_description" />


        <ImageButton
            android:id="@+id/favorite_store_item"
            android:layout_width="@dimen/size_button_width"
            android:layout_height="@dimen/size_button_height"
            android:layout_below="@+id/product_store_photo"
            android:layout_marginStart="@dimen/margin_from_all"
            android:layout_marginTop="@dimen/margin_from_all"
            android:src="@drawable/ic_favorite"
            android:tint="#ffffff" />

        <ImageButton

            android:id="@+id/store_store_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_store_photo"
            android:layout_marginLeft="@dimen/margin_from_all"
            android:layout_marginTop="@dimen/margin_from_all"
            android:layout_toEndOf="@+id/favorite_store_item"
            android:src="@drawable/ic_add_shopping_cart"


            />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_store_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:numStars="5"
            android:progressTint="@color/colorAccent"
            android:rating="4" />


    </RelativeLayout>

</android.support.v7.widget.CardView>


