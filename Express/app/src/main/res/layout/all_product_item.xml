<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_from_all">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#aff5b3"
        >


        <ImageView
            android:id="@+id/product_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/honda_accord" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Honda Accord"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/product_description" />

        <TextView
            android:layout_marginStart="27dp"
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="       2.4L, 201 hp, Japan, "
            android:textSize="@dimen/textsize_description"
            android:textColor="#000000"
            android:layout_below="@+id/product_name"
            android:layout_alignStart="@+id/product_price" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="90dp"
            android:text="Price 8000$ "
            android:textSize="@dimen/textsize_price"
            android:textColor="#000000"/>



        <ImageButton
            android:id="@+id/favorite_item"
            android:layout_width="@dimen/size_button_width"
            android:layout_height="@dimen/size_button_height"
            android:layout_below="@+id/product_photo"
            android:layout_marginTop="@dimen/margin_from_all"
            android:layout_marginStart="@dimen/margin_from_all"
            android:tint="#ffffff"
            android:src="@drawable/ic_favorite"
            />
        <ImageButton

            android:id="@+id/store_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_photo"
            android:layout_marginTop="@dimen/margin_from_all"
            android:layout_marginLeft="@dimen/margin_from_all"
            android:layout_toEndOf="@+id/favorite_item"
            android:src="@drawable/ic_add_shopping_cart"


            />



    </RelativeLayout>

</android.support.v7.widget.CardView>


